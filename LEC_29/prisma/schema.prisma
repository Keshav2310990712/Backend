generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url          = env("DATABASE_URL")
}
model User {
  id      Int      @id @default(autoincrement())         //@id for primary key-default for default value yha hamne autoincrement pass kia hai mtlb khud generate hokke bdhte rhegii
  email   String   @unique                               //@unique for no duplicates
  name    String?         //here ? means optional-- can be  null 
  password String
  tweet Tweet[]

}
model Tweet{
  id Int @id @default(autoincrement())
  content String 
  userId Int
  user User @relation(fields: [userId], references: [id], onDelete: Cascade) //one to one  
   
} 